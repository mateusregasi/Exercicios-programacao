#:import hex kivy.utils.get_color_from_hex

MainLayout:
    id:main
    cols:2

    canvas:
        Color:
            rgba: hex("#1E201E")
        Rectangle:
            pos:main.pos
            size:main.size

    AnchorLayout:
        id:left
        anchor_x:'center'
        anchor_y:'center'
        size_hint:(root.ratio, 1)

        TabbedPanel:
            id:box_left
            do_default_tab:False
            background_color:0, 0, 0, 0
            size_hint: (0.8, 0.8)

            Tab:
                text:"Louvor"

                RelativeLayout:

                    canvas:
                        Color:
                            rgba: hex("#3C3D37")

                        RoundedRectangle:
                            size:self.size
                            radius:[0, 0, 30, 30]
                            

                    BoxLayout:
                        orientation:"vertical"
                        size_hint:(1,0.2)
                        pos_hint:{'x':0, 'top':1}
                        
                        LabelForm:
                            id:minister
                            text:"Ministro:"

                        InputForm:
                            id:input_minister
                            text:""

                        LabelForm:
                            id:occupation
                            text:"Ocupação:"

                        InputForm:
                            id:input_occupation
                            text:""

                    InterfaceButton:
                        pos_hint:{"top":0.15, "center_x":0.5}
                        size_hint:(0.8,0.08)
                        font_size:24
                        id:generate
                        text: "Gerar"

            Tab:
                text:"Ministro"
                size_hint: (1, 1)
                pos_hint: {'center_x':0.5, 'center_y':0}

                RelativeLayout:

                    canvas:
                        Color:
                            rgba: hex("#3C3D37")

                        RoundedRectangle:
                            size:self.size
                            radius:[0, 0, 30, 30]
                            
                    BoxLayout:
                        orientation:"vertical"
                        size_hint:(1,0.2)
                        pos_hint:{'x':0, 'top':1}
                        
                        LabelForm:
                            id:worship
                            text:"Louvor:"

                        InputForm:
                            id:input_worship
                            text:""

                        LabelForm:
                            id:version
                            text:"Versão:"

                        InputForm:
                            id:input_version
                            text:""

                    InterfaceButton:
                        pos_hint:{"top":0.15, "center_x":0.5}
                        size_hint:(0.8,0.08)
                        font_size:24
                        id:generate
                        text: "Gerar"


    RelativeLayout:
        id:right
        size_hint:(1-root.ratio, 1)

        Label:
            text:"Imagem"
            font_size:36
            font_name:'Roboto-Black'
            pos_hint: {'center_x': 0.5, 'top':1.45}
        
        RelativeLayout:
            id:box_right
            size_hint: (0.9, 0.75)
            pos_hint: {'center_x': 0.5, 'center_y':0.5}

            canvas:
                Color:
                    rgba: hex("#3C3D37")

                RoundedRectangle:
                    size:box_right.size
                    #pos:box_right.pos
                    radius:[30]

            Image:
                source: "img.png"
                size_hint:(0.8, 0.8)
                pos_hint: {'center_x': 0.5, 'center_y':0.55}


            InterfaceButton:
                id:button_generate
                text:"Gerar Imagem"
                size_hint:(0.4, 0.1)
                pos_hint:{"center_x":0.5, "top":0.15}
                font_size: 28

                #on_press:root.generate()

 
<InterfaceButton@Button>:
    background_color:0,0,0,0
    background_normal:''
    underline:True
    color:1,1,1,1
    font_name:'Roboto-Bold'
    underline:True

    on_press:root.alter_color_button("#1E201E")
    on_release:root.alter_color_button("#697565")

    canvas.before:
        Color:
            rgba:self.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius:[25]

<LabelForm@Label>:
    font_name:'Roboto-Bold'
    font_halign: 'left'
    text_size:self.size
    pos_hint:{"x":0.1, "y":0}

<InputForm@TextInput>:
    font_family:'Roboto-Black'
    size_hint: (0.9,1.3)
    pos_hint:{"center_x":0.5}
    font_size:14
    #background_color: hex("#697565")
    color:1,1,1,1

    hint_text: "Password"
    foreground_color: [1,1,1,1]
    background_color: [0,0,0,0]
    background_image: ""
    background_normal: ""
    background_active: ""
    multiline: False
    canvas:
        Color:
            rgba: hex("#697565")
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: 10,

<TabbedPanelStrip>:
    size:0, cm(0.8)
    canvas.before:
        Color:
            rgba: (0, 1, 0, 0)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius:[30,30,0,0]
            
<Tab@TabbedPanelItem>:
    background_color:0,0,0,0
    #on_active:self._on_active()
    

    canvas.before:
        Color:
            rgba:hex("#3C3D37")
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:15,0,0,0
